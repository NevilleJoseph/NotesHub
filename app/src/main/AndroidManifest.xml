<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pnpj.noteshub">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FirstSignInActivity"
            android:label="Enter Your Details" />
        <activity
            android:name=".EmailNotVerifiedActivity"
            android:label="Verify Your Email" />
        <activity android:name=".NotesDetailsActivity" />
        <activity
            android:name=".UploadNotesActivity"
            android:label="Upload Notes"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".MyUploadsActivity"
            android:label="My Uploads"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".ViewNotesOnlineActivity" />
        <activity
            android:name=".BranchNotesActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MyAccountActivity"
            android:label="My Account"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ViewSearchedNotesActivity"
            android:label="Search Results"
            android:parentActivityName=".SearchActivity" />
        <activity
            android:name=".SearchActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".DownloadsActivity"
            android:label="My Downloads"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RedeemMoneyActivity"
            android:label="Redeem Earnings"
            android:parentActivityName=".MyAccountActivity" />
        <activity android:name=".ReportActivity"
            android:label="Report Note"></activity>
    </application>

</manifest>